<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Marvelverse" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="actionBarTheme">@style/MyActionBarStyle</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="card_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/background</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:subtitleTextColor">@color/white</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:color">@color/primary</item>
        <item name="android:background">@color/bottom_navigation_background</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
        <item name="itemTextColor">@drawable/nav_item_text_color</item>
        <item name="itemIconTint">@drawable/nav_item_color</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary</item>
    </style>
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="checkedIcon">@drawable/baseline_check_24</item>
    </style>

</resources>